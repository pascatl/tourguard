    "dependencies": {
        "express": "^4.18.2",
        "cors": "^2.8.5",
        "helmet": "^7.1.0",
        "morgan": "^1.10.0",
        "pg": "^8.11.3",
        "knex": "^2.5.1",
        "bcryptjs": "^2.4.3",
        "jsonwebtoken": "^9.0.2",
        "multer": "^1.4.5-lts.1",
        "node-cron": "^3.0.3",
        "axios": "^1.6.0",
        "express-validator": "^7.0.1",
        "dotenv": "^16.3.1",
        "uuid": "^9.0.1"
