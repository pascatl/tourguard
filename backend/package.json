        "eslint": "^8.55.0",
        "@typescript-eslint/eslint-plugin": "^6.13.1",
        "@typescript-eslint/parser": "^6.13.1",
        "jest": "^29.7.0",
        "@types/jest": "^29.5.8",
        "supertest": "^6.3.3",
        "@types/supertest": "^2.0.16",
        "ts-jest": "^29.1.1",
        "cross-env": "^7.0.3"
    },
    "keywords": [
        "tourguard",
